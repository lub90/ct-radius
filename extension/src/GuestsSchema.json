{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GuestUser",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 1,
      "description": "Unique username for the guest user."
    },
    "password": {
      "type": "string",
      "minLength": 1,
      "description": "Cleartext password for the guest user."
    },
    "valid": {
      "type": "object",
      "description": "Validity period for the guest account.",
      "properties": {
        "from": {
          "type": "string",
          "format": "date-time",
          "description": "Start of validity period."
        },
        "to": {
          "type": "string",
          "format": "date-time",
          "description": "End of validity period."
        }
      },
      "required": ["from", "to"]
    },
    "assignedVlan": {
      "type": "integer",
      "minimum": 0,
      "description": "Optional VLAN ID assigned to the guest."
    }
  },
  "required": ["username", "password", "valid"],
  "additionalProperties": false
}
